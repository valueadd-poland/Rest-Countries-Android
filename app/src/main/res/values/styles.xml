<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textAppearance">@style/AppTheme.Font.Roboto</item>
    </style>

    <style name="AppTheme.ThemeOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>

    <style name="AppTheme.ThemeOverlay.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.ThemeOverlay.ActionBar.Transparent">
        <item name="colorPrimary">@color/whiteTransparent</item>
    </style>

    <style name="AppTheme.Font" parent="@android:style/TextAppearance" />

    <style name="AppTheme.Font.Roboto">
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="AppTheme.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/blackAlpha60</item>
    </style>

    <style name="AppTheme.Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:elevation">@dimen/size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/_1dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="AppTheme.Widget.Button.Icon" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:elevation">@dimen/size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/_1dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="AppTheme.Widget.Button.Borderless" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/whiteTransparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/_1dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat" />

    <style name="AppTheme.TextAppearance.Title">
        <item name="android:textSize">@dimen/text_giant_size</item>
    </style>

    <style name="AppTheme.TextAppearance.Title.Outlined" >
        <item name="android:shadowColor">@color/secondaryTextColor</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.3</item>
        <item name="android:shadowRadius">1.6</item>
    </style>

    <style name="AppTheme.Chip.Filter" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
    </style>

</resources>
